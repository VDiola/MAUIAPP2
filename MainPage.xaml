<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage">

    <ScrollView>
        <HorizontalStackLayout
            Spacing="10"
            Padding="30,0"
            >

            <VerticalStackLayout>
                
                <ImageButton
                    x:Name="imgBtn1"
                    Source="img1.png"
                    HeightRequest="150"
                    WidthRequest="150"
                    Clicked="ImgBtn1_Clicked"
                   
                    />

                <Label
                    x:Name="lbl1"
                    Text="Expectation"
                    FontAttributes="Bold"/>
                
            </VerticalStackLayout>

            
            <VerticalStackLayout>

                <ImageButton
                        x:Name="imgBtn2"
                        Source="img2.png"
                        HeightRequest="150"
                        WidthRequest="150"
                        Clicked="ImgBtn2_Clicked"
                        />


                <Label
                    x:Name="lbl2"
                    Text="Expectation"
                    FontAttributes="Bold"
                    />
            </VerticalStackLayout>

        </HorizontalStackLayout>
    </ScrollView>

</ContentPage>
